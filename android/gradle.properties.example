# gradle.properties.example
#
# Copy this file to gradle.properties and fill in your values
# DO NOT COMMIT gradle.properties to git! It's in .gitignore
#
# This file is for documentation purposes only

# JVM Memory Configuration (increased for llama.cpp native build + Compose)
# Adjust based on your system RAM:
# - 4GB RAM systems: -Xmx2048m
# - 8GB RAM systems: -Xmx4096m (recommended)
# - 16GB+ RAM systems: -Xmx6144m
org.gradle.jvmargs=-Xmx4096m -XX:MaxMetaspaceSize=1024m

# AndroidX Support (required for Compose and modern Android libraries)
android.useAndroidX=true
android.enableJetifier=true

# Home server address where logs will be uploaded
# Local testing: http://localhost:8000
# Home network: http://192.168.1.100:8000
# Remote (Cloudflare Tunnel): https://flanergide.your-domain.com
SERVER_URL=http://localhost:8000

# JWT token for authentication with backend
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
JWT_TOKEN=your-jwt-token-here
