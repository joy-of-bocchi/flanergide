# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Security - JWT
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-secret-key-here-change-this-to-random-string
JWT_ALGORITHM=HS256
TOKEN_EXPIRY_HOURS=24

# Cloudflare Tunnel
# Format: https://your-tunnel-name.your-domain.com
CLOUDFLARE_TUNNEL_URL=https://flanergide.example.com

# Blog Configuration
# Your blog homepage URL (can be any URL, scraper will fetch from here)
BLOG_URL=https://your-blog.com

# Blog Scraper Settings
ENABLE_BLOG_SCRAPER=true
BLOG_SCRAPER_INTERVAL_HOURS=4

# AI/Summarization
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# Storage Paths
CHROMA_PERSIST_DIR=./app/storage/chroma_db
STATE_DIR=./app/storage/state

# Feature Flags
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO
